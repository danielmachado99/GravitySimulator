{
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe build active file",
			"command": "C:\\MinGW\\bin\\g++.exe",
			"args": [
				//"-fdiagnostics-color=always",
				"-g",
				"-I",
				"${fileDirname}\\src\\include",
				"-L",
				"${fileDirname}\\src\\lib",

				//"${file}",
				"${fileDirname}\\**.cpp",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe",
				"-lmingw32",
				"-lSDL2main",
				"-lSDL2"

				//"-Iinclude -IC:\\src\\include\\SDL2 -LC:\\src\\lib",
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": ["$gcc"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Task generated by Debugger."
		}
	],
	"version": "2.0.0"
}
